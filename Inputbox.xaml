<Window x:Class="Snake.Inputbox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Enter your name" Height="112" Width="362" ResizeMode="NoResize">
    <Grid>
        <Button Height="23" Margin="140,0,0,9" Name="btnOK" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75" Click="btnOK_Click" IsDefault="True">OK</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,9,9" Name="btnCancel" VerticalAlignment="Bottom" Width="75" Click="btnCancel_Click">Cancel</Button>
        <Label HorizontalAlignment="Left" Margin="8,8,0,0" Name="lblInfo" Width="120" Height="28" VerticalAlignment="Top">Enter your name:</Label>
        <TextBox Margin="140,13,9,0" Name="username" Height="23" VerticalAlignment="Top" TabIndex="0" />
    </Grid>
</Window>
